<div class="container">
    <div class="row mt-3">
        <div class="col-sm-8">
            <h2>Daftar Kontak</h2>
            <% if (msg.length !=0) { %>
            <div class="alert alert-success" role="alert">
                <strong><%= msg %></strong>
            </div>

            <% } %>
            <a href="/contact/add" class="btn btn-primary mb-2 mt-2">Tambah Contact</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nama</th>
                            <th scope="col">No HP</th>
                            <th scope="col">-</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (contacts.length < 1) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger" role="alert">
                                    <small class="fw-bold">Kontak Masih Kosong</small>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                        <% contacts.forEach((contact, i) => { %>
                        <tr class="">
                            <td scope="row"><%= i+1 %></td>
                            <td scope="row"><%= contact.nama %></td>
                            <td><%= contact.noHP %></td>
                            <td>
                                <a href="/contact/<%= contact._id %>" class="badge bg-primary rounded-pill"><i
                                        class="bi bi-info-circle"></i>&nbsp;Detail</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>